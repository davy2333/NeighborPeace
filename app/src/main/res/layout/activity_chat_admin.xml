<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisPantallas"> <!-- Fondo negro -->

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/bot_n_de_retroceso"
        android:src="@android:drawable/btn_dialog" /> <!-- Icono de retroceso -->

    <ScrollView
        android:id="@+id/message_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/back_button"
        android:layout_weight="1"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:importantForAutofill="no"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/escribe_un_mensaje_input"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="@android:color/darker_gray" /> <!-- AsegÃºrate de que el fondo sea adecuado -->

        <Button
            android:id="@+id/options_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@color/Morado"
            android:padding="3dp"
            android:text="@string/button_send_admin"
            android:textColor="#4E342E" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Morado"
            android:padding="10dp"
            android:text="@string/enviar_admin_button"
            android:textColor="#4E342E" />
    </LinearLayout>

</RelativeLayout>